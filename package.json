{
  "name": "@cvplus/workflow",
  "version": "1.0.0",
  "description": "CVPlus workflow management module for job processing, feature orchestration, templates, and certification badges",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:prod": "rollup -c --environment NODE_ENV:production",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "dev": "npm run build:dev -- --watch",
    "prepublishOnly": "npm run clean && npm run build:prod"
  },
  "keywords": [
    "cvplus",
    "workflow",
    "job-management",
    "feature-orchestration",
    "templates",
    "certification-badges",
    "firebase-functions"
  ],
  "author": "Gil Klainert",
  "license": "MIT",
  "dependencies": {
    "firebase-functions": "^4.5.0",
    "firebase-admin": "^11.11.1",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/storage": "^7.7.0",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.3",
    "rollup": "^4.9.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gilco1973/cvplus-workflow.git"
  },
  "bugs": {
    "url": "https://github.com/gilco1973/cvplus-workflow/issues"
  },
  "homepage": "https://github.com/gilco1973/cvplus-workflow#readme"
}